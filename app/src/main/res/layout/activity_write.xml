<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pet.petcontrol.WriteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        >
        <TextView
            android:id="@+id/tv_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar PET"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/etc_nome_adot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Nome adotante"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:saveEnabled="true"
            android:enabled="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/etc_nome_animal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Nome Animal"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:saveEnabled="true"
            android:enabled="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />


        <EditText
            android:id="@+id/etc_idade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Idade"
            android:inputType="text"
            android:maxLines="1"
            android:saveEnabled="true"
            android:enabled="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/etc_carac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:enabled="true"
            android:hint="Caracteristicas"
            android:inputType="text"
            android:maxLines="1"
            android:saveEnabled="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/etc_resp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:hint="Responsável"
            android:inputType="text"
            android:maxLines="1"
            android:saveEnabled="true"
            android:enabled="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/etc_data_cap_cas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:enabled="true"
            android:hint="Data de Captura"
            android:inputType="date"
            android:maxLines="1"
            android:saveEnabled="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/etc_data_entrega"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:hint="Data de Doação"
            android:inputType="date"
            android:maxLines="1"
            android:saveEnabled="true"
            android:enabled="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <CheckBox
            android:id="@+id/cb_castrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Pet Castrado?"
            android:textSize="20sp"
            android:onClick="cbclick"/>

        <RadioGroup
            android:id="@+id/rg_sexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_macho"
                android:text="Macho"
                android:textSize="20sp"
                android:checked="false"
                android:onClick="rbclick"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_femea"
                android:text="Fêmea"
                android:textSize="20sp"
                android:checked="false"
                android:onClick="rbclick"/>

        </RadioGroup>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_cadastro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:layout_weight="0.5"
                android:text="Cadastrar PET"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
