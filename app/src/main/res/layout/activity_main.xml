<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pet.petcontrol.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/tvRead"
            style="@style/CategoryStyle"
            android:background="#FD8E09"
            android:layout_marginBottom="20dp"
            android:text="Ler Dados" />
        <TextView
            android:id="@+id/tvWrite"
            style="@style/CategoryStyle"
            android:background="#FACE"
            android:layout_marginBottom="20dp"
            android:text="Escrever Dados" />

        <TextView
            android:id="@+id/teste"
            style="@style/CategoryStyle"
            android:background="#eeaac2"
            android:layout_marginBottom="20dp"
            android:text="Test" />

        <TextView
            android:id="@+id/sheet"
            style="@style/CategoryStyle"
            android:background="#b4eeaa"
            android:layout_marginBottom="20dp"
            android:text="Sheet" />

    </LinearLayout>

</ScrollView>
