<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.pet.petcontrol.TestAPI">

    <Button
    android:id="@+id/createfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Create a file on Google Drive"
    android:onClick="onClickCreateFile"/>

    <Button
    android:id="@+id/openfile"
    android:layout_below="@+id/createfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Open file from Google Drive"
    android:onClick="onClickOpenFile"/>

</RelativeLayout>